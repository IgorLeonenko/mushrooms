<div class="container-fluid">
  <div class="row" style="margin-bottom: 10px;">
    <div class="col-12">
      <%= form_tag root_path, method: 'get', id: "search" do %>
        <div class="form-group form-check">
          <%= hidden_field_tag :edible, 'false' %>
          <%= check_box_tag :edible, true, params[:edible] == "true", class: "form-check-input" %>
          <%= label_tag(:edible, "edible", class: "form-check-label") %>
        </div>
        <div class="form-group form-check">
          <%= hidden_field_tag :bruises, 'false' %>
