          <%= label_tag(:bruises, "bruises", class: "form-check-label") %>
        </div>
        <div class="form-group">
          <%= label_tag(:cap_shape, "cap shape") %>
          <%=
            select_tag(
              :cap_shape,
              options_for_select(CAP_SHAPE.map { |e| [e[1], e[1]] }.insert(0, "")),
              class: "form-control",
            )
          %>
        </div>
        <div class="form-group">
          <%= label_tag(:cap_surface, "cap surface") %>
          <%=
            select_tag(
              :cap_surface,
              options_for_select(CAP_SURFASE.map { |e| [e[1], e[1]] }.insert(0, "")),
