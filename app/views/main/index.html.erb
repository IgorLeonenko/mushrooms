            select_tag(
              :cap_color,
              options_for_select(CAP_COLOR.map { |e| [e[1], e[1]] }.insert(0, "")),
              class: "form-control",
            )
          %>
        </div>
        <div class="form-group">
          <%= label_tag(:odor, "odor") %>
          <%=
            select_tag(
              :odor,
              options_for_select(ODOR.map { |e| [e[1], e[1]] }.insert(0, "")),
              class: "form-control",
            )
          %>
        </div>
        <div class="form-group">
          <%= label_tag(:gill_attachment, "gill attachment") %>
          <%=
            select_tag(
              :gill_attachment,
              options_for_select(GILL_ATTACHMENT.map { |e| [e[1], e[1]] }.insert(0, "")),
              class: "form-control",
            )
          %>
        </div>
        <div class="form-group">
          <%= label_tag(:gill_spacing, "gill spacing") %>
